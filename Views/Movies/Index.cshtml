@model Vidly.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "Movie List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

@Html.ActionLink("New Movie", "New", "Movie", null, new { @class = "btn btn-primary" })

<br /><br />

@if (Model.Movies.Count == 0)
{
    <p>You might be wondering whow is it that there's not a single movie in this god forsaking movie rental joint</p>
    <p>We do wonder too</p>
}
else
{
    <table class=“table table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}