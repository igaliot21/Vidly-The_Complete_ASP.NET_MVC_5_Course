@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random Movie (But not really)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var classPopular = Model.Customers.Count > 1 ? "popular" : null;
}


<h2 class="@classPopular">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>Not a single god loving soul has ever rented this shitshow of a movie</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
